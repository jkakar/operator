<h1>Welcome to Canoe</h1>

<p class="lead muted">
  What would you like to deploy?
</p>

<div class="repos-index-grid">
  <ul class="repos-index-list">
    <%- @repos.each do |repo| %>
      <li>
        <%= link_to repo do %>
          <span class="icon">
            <%= content_tag :i, "", class: "icon-#{repo.icon}" %>
          </span>

          <span class="repo-link">
            <%= repo.name %>
          </span>
        <%- end %>
      </li>
    <%- end %>
  </ul>
</div>
