<h2>Select the account to query</h2>

<% if flash[:error] %>
<div class='alert-error'>
  <span class='alert alert-error alert-danger'>
    Error: <%= flash[:error] %>
  </span>
</div>
<% end %>

<p>
<ul>
<% accounts.each do |account| %>
  <li><%= link_to account.descriptive_name, "/queries/new?account_id=#{account.id}" %></li>
<% end %>
</ul>
</p>
