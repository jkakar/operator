<!-- #html -->
<strong><%= @datacenter %>: Hosts without data about the last Chef run</strong><br>
<em>Chef may not be running at all or Zabbix base template (t_linux) may not be applied</em>
<table>
  <tr>
    <th>
      Host
    </th>
  </tr>
  <% @hosts_without_data.each do |host| %>
    <tr>
      <td>
        <code>
          <%= host["host"] %>
        </code>
      </td>
    </tr>
  <% end %>
</table>

<strong><%= @datacenter %>: Hosts without a recent successful Chef run</strong><br>
<table>
  <tr>
    <th>
      Hostname
    </th>
    <th>
      Problem
    </th>
  </tr>
  <% @problems.each do |problem| %>
    <% host = problem.fetch("hosts", []).first %>
    <tr>
      <td>
        <code>
          <% if host %>
            <%= host["host"] %>
          <% else %>
            <i>unknown host</i>
          <% end %>
        </code>
      </td>
      <td>
        <%= problem["description"] %>
      </td>
    </tr>
  <% end %>
</table>
