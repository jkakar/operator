<!DOCTYPE html>
<html>
<head>
  <title>Pardot Explorer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css', media: 'all' %>
  <%= stylesheet_link_tag '//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header role="banner">
    <div class="navbar-header">
        <a href="/" class="navbar-brand"><%= image_tag "logo.png", alt: "Pardot", class: "img-responsive" %></a>
        <% if true#current_user %>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/logout"><i class="fa fa-sign-out" title="logout"></i></a></li>
          </ul>
        <% end %>
        <span class="title">Pardot Explorer</span>
    </div>
  </header>
  <aside role="navigation">
    <nav>
      <ul class="nav nav-stacked">
        <li>
          <a href="<%= new_global_query_path %>"><i class="fa fa-cloud"></i>Global</a>
        </li>
        <li>
          <a href="<%= accounts_path %>"><i class="fa fa-cloud"></i>Account</a>
        </li>
      </ul>
    </nav>
  </aside>

  <div class="main">
    <%= yield %>
  </div>
</body>
</html>
