<div class="container">
  <h4>Servers</h4>
  <% deploy.all_servers.each do |server| %>
    <div class="deploy-server-status">
      <% if deploy.finished_servers.include?(server) %>
        <span class="text-success" title="Complete"><i class="icon-check"></i></span>
      <% else %>
        <span class="text-muted muted" title=""><i class="icon-check-empty"></i></span>
      <% end %>
      <%= server %>
    </div>
  <% end %>
</div>

<div class="container">
  <h4>Pull-Based Servers</h4>
  <%- deploy.results.each do |result| %>
    <div class="deploy-server-status">
      <%- if result.pending? %>
        <span class="text-muted muted" title=""><i class="icon-check-empty"></i></span>
      <%- elsif result.completed? %>
        <span class="text-success" title="Complete"><i class="icon-check"></i></span>
      <% elsif result.failed? %>
        <span class="text-success" title="Complete"><i class="icon-check"></i></span>

      <% end %>
      <%= result.server.hostname %>
    </div>
  <%- end %>
</div>

<div class="clearfix">
</div>
<br>
