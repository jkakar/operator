<aside role="navigation">
  <div class="sideoption">
    <p>Database</p>
    <ul class="nav nav-stacked database">
      <li>
        <span <%= show_tag?(:database, "Global", :span) %>><i class="fa fa-code"></i>Global</span>
        <a href="#" <%= show_tag?(:database, "Global", :href) %>><i class="fa fa-cloud"></i>Global</a>
      </li>
      <li>
        <span id="shard_selected" <%= show_tag?(:database, "Shard", :span) %>><i class="fa fa-code"></i>Shard</span>
        <a href="#" <%= show_tag?(:database, "Shard", :href) %>><i class="fa fa-cloud"></i>Shard</a>
      </li>
    </ul>
  </div>
  <div class="sideoption">
    <p>Datacenter</p>
    <ul class="nav nav-stacked">
      <li>
        <span <%= show_tag?(:datacenter, "Dallas", :span) %>><i class="fa fa-thumbs-up"></i>Dallas</span>
        <a href="#" <%= show_tag?(:datacenter, "Dallas", :href) %>><i class="fa fa-thumbs-up"></i>Dallas</a>
      </li>
      <li>
        <span <%= show_tag?(:datacenter, "Seattle", :span) %>><i class="fa fa-thumbs-up"></i>Seattle</span>
        <a href="#" <%= show_tag?(:datacenter, "Seattle", :href) %>><i class="fa fa-thumbs-up"></i>Seattle</a>
      </li>
    </ul>
  </nav>
</aside>
<div class="main">
  <%= form_for @query do |f| %>
    <%= f.hidden_field :database %>
    <%= f.hidden_field :datacenter %>
    <div id="account_id">
      <span>Account:</span>
      <%= f.select :account_id, options_for_select(%w[Pardot1/1 Solaris2/2])  %>
    </div>
    <div class="btn-group view">
      <button type="button" class="btn btn-default active">Tables</button>
      <button type="button" class="btn btn-default">I like my SQL</button>
    </div>
    <div class="viewoption" style="display:none;">
      <%= f.text_area(:sql, size: "60x6") %>
      <%= f.submit %>
    </div>
    <div class="viewoption">
      <table class="table table-striped scrollable">
        <% ActiveRecord::Base.connection.tables.each do |table| %>
          <tr>
            <td class="filterable-cell"><a href="#" class="account_helper"><%= table %></a></td>
          </tr>
        <% end %>
      </table>
    </div>
  <% end %>
</div>