<h1 class="steps-count">Step 1 of 3</h1>
<h2>What do you want to deploy?</h2>
<br>

<p class="lead muted">
  Select the <%= deploy_type_icon("commit") %> <strong>commit</strong> that you wish to ship.
</p>

<ul class="list-unstyled deploy-list">
  <%= render partial: "application/deploy_what_tabs" %>

  <% @commits.each do |commit| %>
    <li>
      <h4>
        <a href="<%= select_target_repo_deploys_path(current_repo.name, what: "commit", what_details: commit.sha) %>" class="btn btn-primary btn-xs btn-success deploy-button">Ship This</a>
        &nbsp;
        <%= deploy_type_icon("commit") %> <%= sha_span(commit.sha) %>
        &nbsp;
        <a href="<%= github_commit_url(commit) %>" class="text-muted" title="view on github"><i class="icon-github-sign"></i></a>
      </h4>
      <small class="muted">
        <% author = (commit.author || commit.commit.author) %>
        author: <%= author.try(:login) || author.try(:name) %>
        &nbsp; | &nbsp;
        date: <%= print_time commit.commit.committer.date %>
      </small>
      <p><%= commit.commit.message %></p>
      <hr>
    </li>
  <% end %>
</ul>
