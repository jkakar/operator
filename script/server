#!/bin/bash
set -e

dir="$(cd "$(dirname "${BASH_SOURCE[0]}")/.."; pwd)"
cd "$dir"

# No secrets here, please.
# Secrets are configured in AWS ECS. Ping the bread team for help.
export HUBOT_YUBIKEY_API_ID=24689
export HUBOT_PAGERDUTY_SUBDOMAIN="pardot"
export HUBOT_PAGERDUTY_SERVICES="PXVMR39,P0VDMCH"

# checkout the README and add a secrets.sh file to connect to hipchat
test -f "$dir/script/secrets.sh" && source "$dir/script/secrets.sh"

exec bin/hubot --alias '!' --disable-httpd "$@"
