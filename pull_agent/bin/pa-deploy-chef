#!/usr/bin/env bash
#/ Usage: pa-deploy-chef [-d chef-dir] [-b git-branch] [-s git-sha] [-f chef-env-file] [-n nodes-dir] <action>
set -euo pipefail

: "${PROGRAM:="$(basename "$0")"}"

print_help() {
    grep ^#/ <"$0" |cut -c4-
}

branch=""
chefdir=""
chefenvfile=""
nodesdir=""
sha=""
while getopts d:b:f:s:n: arg
do
    case "$arg" in
        b)
            branch="$OPTARG"
            ;;
        d)
            chefdir="$OPTARG"
            ;;
        f)
            chefenvfile="$OPTARG"
            ;;
        s)
            sha="$OPTARG"
            ;;
        n)
            nodesdir="$OPTARG"
            ;;
        ?)
            print_help
            exit 2
            ;;
    esac
done

shift $((OPTIND - 1))

action="${1:-""}"
case "$action" in
    -h|--help)
        print_help
        exit 2
        ;;
    status)
        if [ -z "$chefdir" ]
        then
            echo "$PROGRAM: required flag missing: -d <chef-dir>"
            exit 1
        fi

        GIT_WORK_TREE="$chefdir"
        GIT_DIR="$GIT_WORK_TREE/.git"
        export GIT_WORK_TREE GIT_DIR

        printf "{\"sha\": \"%s\", \"branch\": \"%s\"}\n" \
            "$(git rev-parse HEAD)" \
            "$(git rev-parse --abbrev-ref HEAD)"
        ;;
    deploy)
        if [ -z "$chefdir" ]
        then
            echo "$PROGRAM: required flag missing: -d <chef-dir>"
            exit 1
        fi

        if [ -z "$branch" ]
        then
            echo "$PROGRAM: required flag missing: -b <git-branch>"
            exit 1
        fi

        if [ -z "$sha" ]
        then
            echo "$PROGRAM: required flag missing: -s <git-sha>"
            exit 1
        fi

        if [ -z "$chefenvfile" ]
        then
            echo "$PROGRAM: required flag missing: -f <chef-env-file>"
            exit 1
        fi

        if [ -z "$nodesdir" ]
        then
            echo "$PROGRAM: required flag missing: -n <nodes-dir>"
            exit 1
        fi

        GIT_WORK_TREE="$chefdir"
        GIT_DIR="$GIT_WORK_TREE/.git"
        export GIT_WORK_TREE GIT_DIR

        git fetch origin 2>&1
        git checkout "$branch" 2>&1
        git pull origin "$branch" 2>&1
        git reset --hard "$sha" 2>&1

        cd "$chefdir"
        if [ "$chefenvfile" = "none" ]
        then
            echo "flag -f set to none. skipping 'knife pd sync'" 2>&1
            exit 1
        else
            knife pd sync \
                --skip-berkshelf \
                --environment-file "$chefenvfile"
                2>&1
        fi
        ;;
    *)
        echo "$PROGRAM: unsupported action: $action"
        exit 2
        ;;
esac
