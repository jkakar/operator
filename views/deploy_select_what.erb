<h1 class="steps-count">Step 1 of 3</h1>
<h2>What do you want to deploy?</h2>
<br>

<% if @tags || @branches || @commits %>
  <p class="lead muted">
    Select the
    <% if @tags %>
      <%= deploy_type_icon("tag") %> <strong>tag</strong>
    <% elsif @branches %>
      <%= deploy_type_icon("branch") %> <strong>branch</strong>
    <% elsif @commits %>
      <%= deploy_type_icon("commit") %> <strong>commit</strong>
    <% end %>
    that you wish to ship.
  </p>
<% end %>

<div>
  <% if @branches %>
    <form class="form-inline pull-right" role="form" action="<%= repo_path %>/branches" method="get">
      <div class="form-group">
        <label class="sr-only" for="search">Search</label>
        <input type="text" class="form-control" id="search" name="search" placeholder="Enter branch name" value="<%= params[:search] %>">
      </div>
      <button type="submit" class="btn btn-default">Search</button>
    </form>
  <% end %>
  <ul class="nav nav-tabs">
    <li <%= 'class="active"' if @tags %>>
      <a href="<%= repo_path %>/tags"><%= deploy_type_icon("tag") %> Tags</a>
    </li>
    <li <%= 'class="active"' if @branches %>>
      <a href="<%= repo_path %>/branches"><%= deploy_type_icon("branch") %> Branches</a>
    </li>
    <li <%= 'class="active"' if @commits %>>
      <a href="<%= repo_path %>/commits"><%= deploy_type_icon("commit") %> Commits</a>
    </li>
  </ul>
  <br>

  <% if @tags %>
    <%= partial :'partials/tags', locals: { tags: @tags } %>
  <% elsif @branches %>
    <%= partial :'partials/branches', locals: { branches: @branches } %>
  <% elsif @commits %>
    <%= partial :'partials/commits', locals: { commits: @commits } %>
  <% elsif @tag %>
    <%= partial :'partials/latest_tag', locals: { tag: @tag, full_tag: @full_tag } %>
  <% else %>
    <div class="container">
      <h3 class="muted"><i class="icon-circle-arrow-up"></i>
        Select where to grab the code.
      </h3>
      <% if current_repo.name == "pardot" %>
        <br>
        <h4>
          Or deploy the
          <a href="<%= repo_path %>/tags/latest"><i class="icon-tags"></i> latest tag</a>
        </h4>
      <% end %>
    </div>
  <% end %>
</div>
