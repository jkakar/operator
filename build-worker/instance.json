{
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": "20480",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "RedHat_64",
      "hard_drive_interface": "sata",
      "headless": true,
      "http_directory": "ks",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
      "output_directory": "packer/virtualbox",
      "shutdown_command": "echo 'centos' | sudo -S /sbin/halt -h -p",
      "ssh_username": "centos",
      "ssh_password": "centos",
      "ssh_wait_timeout": "10000s",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "{{ user `name` }}",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--rtcuseutc",
          "on"
        ]
      ]
    },
    {
      "type": "amazon-ebs",
      "source_ami": "{{user `source_ami`}}",
      "instance_type": "{{user `instance_type`}}",
      "region": "{{user `region`}}",
      "ami_name": "{{user `name`}}-{{timestamp}}",
      "ssh_username": "centos",
      "ssh_pty" : true,
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 20,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "ami_block_device_mappings": [
        {
          "device_name": "/dev/sdb",
          "virtual_name": "ephemeral0"
        },
        {
          "device_name": "/dev/sdc",
          "virtual_name": "ephemeral1"
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./provisioners",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "inline": [
        "cd /tmp/provisioners",
        "sudo ./bootstrap.sh",
        "cd /",
        "sudo rm -rf /tmp/provisioners"
      ]
    }
  ],
  "variables": {
    "instance_type": "c3.xlarge",
    "iso_checksum": "c455ee948e872ad2194bdddd39045b83634e8613249182b88f549bb2319d97eb",
    "iso_checksum_type": "sha256",
    "iso_name": "CentOS-7-x86_64-DVD-1611.iso",
    "mirror": "http://mirrors.kernel.org/centos",
    "mirror_directory": "7.3.1611/isos/x86_64",
    "name": "bamboo-elastic-instance",
    "region": "us-east-1",
    "source_ami": "ami-6d1c2007"
  }
}
