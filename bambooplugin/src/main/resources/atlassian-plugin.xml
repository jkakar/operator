<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
  <plugin-info>
    <description>${project.description}</description>
    <version>${project.version}</version>
    <vendor name="${project.organization.name}" url="${project.organization.url}"/>
    <param name="plugin-icon">images/pluginIcon.png</param>
    <param name="plugin-logo">images/pluginLogo.png</param>
    <bundle-instructions>
      <Export-Package>com.pardot.bread.bambooplugin</Export-Package>
    </bundle-instructions>
  </plugin-info>
  <!-- add our i18n resource -->
  <resource type="i18n" name="i18n" location="pardot-bamboo-plugin"/>
  <!-- add our web resources -->
  <web-resource key="pardot-bamboo-plugin-resources" name="pardot-bamboo-plugin Web Resources">
    <dependency>com.atlassian.auiplugin:ajs</dependency>
    <resource type="download" name="pardot-bamboo-plugin.css" location="/css/pardot-bamboo-plugin.css"/>
    <resource type="download" name="pardot-bamboo-plugin.js" location="/js/pardot-bamboo-plugin.js"/>
    <resource type="download" name="images/" location="/images"/>
    <context>pardot-bamboo-plugin</context>
    <context>bamboo.configuration</context>
    <context>atl.admin</context>
  </web-resource>
  <triggerType key="github-webhook-trigger" name="GitHub webhook" class="com.pardot.bread.bambooplugin.trigger.GithubWebhookTriggerActivator">
    <description>GitHub webhook notifies Bamboo of changes</description>
    <configurator class="com.pardot.bread.bambooplugin.trigger.GithubWebhookTriggerConfigurator"/>
    <applicability class="com.pardot.bread.bambooplugin.trigger.GithubWebhookTriggerApplicability"/>
    <resource type="freemarker" name="edit" location="templates/editGithubWebhookTrigger.ftl"/>
  </triggerType>
  <repository key="github-enterprise-repository" name="GitHub Enterprise repository" class="com.pardot.bread.bambooplugin.repository.GithubEnterpriseRepository">
    <description>A GitHub Enterprise repository</description>
    <resource type="freemarker" name="edit" location="templates/githubEnterpriseRepositoryEdit.ftl"/>
    <resource type="freemarker" name="view" location="templates/githubEnterpriseRepositoryView.ftl"/>
    <resource type="freemarker" name="advancedEdit" location="templates/githubEnterpriseRepositoryAdvancedEdit.ftl"/>
    <resource type="freemarker" name="branchIntegrationEdit" location="/com/atlassian/bamboo/plugins/git/branchIntegrationEdit.ftl"/>
  </repository>
  <rest name="Pardot Bamboo REST API" i18n-name-key="pardot-bamboo-rest.name" key="pardot-bamboo-rest" path="/pardot" version="1.0">
    <description key="pardot-bamboo-rest.description">The Pardot Bamboo REST API</description>
  </rest>

  <component-import key="branchDetectionService" interface="com.atlassian.bamboo.plan.branch.BranchDetectionService" />
  <component-import key="branchIntegrationHelper" interface="com.atlassian.bamboo.plan.branch.BranchIntegrationHelper" />
  <component-import key="buildDirectoryManager" interface="com.atlassian.bamboo.build.fileserver.BuildDirectoryManager" />
  <component-import key="buildLoggerManager" interface="com.atlassian.bamboo.build.BuildLoggerManager" />
  <component-import key="cachedPlanManager" interface="com.atlassian.bamboo.plan.cache.CachedPlanManager" />
  <component-import key="capabilityContext" interface="com.atlassian.bamboo.v2.build.agent.capability.CapabilityContext" />
  <component-import key="customVariableContext" interface="com.atlassian.bamboo.variable.CustomVariableContext"/>
  <component-import key="encryptionService" interface="com.atlassian.bamboo.security.EncryptionService" />
  <component-import key="eventPublisher" interface="com.atlassian.event.api.EventPublisher" />
  <component-import key="i18nResolver" interface="com.atlassian.sal.api.message.I18nResolver" />
  <component-import key="planManager" interface="com.atlassian.bamboo.plan.PlanManager" />
  <component-import key="repositoryDefinitionManager" interface="com.atlassian.bamboo.repository.RepositoryDefinitionManager" />
  <component-import key="sshProxyService" interface="com.atlassian.bamboo.ssh.SshProxyService" />
  <component-import key="templateRenderer" interface="com.atlassian.bamboo.template.TemplateRenderer" />
  <component-import key="trustedKeyHelper" interface="com.atlassian.bamboo.security.TrustedKeyHelper" />
</atlassian-plugin>
