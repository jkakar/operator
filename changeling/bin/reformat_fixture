#!/usr/bin/env ruby

require "json"
require "fileutils"

while filename = ARGV.shift do
  if File.exists?(filename)
    puts "Reformatting: #{filename}"
    data = JSON.parse(File.read(filename))
    File.write("#{filename}.bak", JSON.pretty_generate(data) + "\n")
    FileUtils.mv("#{filename}.bak", filename)
  end
end

