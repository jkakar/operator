# This is using the :key: yml syntax to get symbol keys instead of string keys
---
<% pardot_dir = "/var/www/pardot" %>
<% realtime_dir = "/opt/realtime_frontend" %>
<% workflow_dir = "/opt/workflow" %>
<% pithumbs_dir = "/var/www/pithumbs" %>
:sudo: sudo -u pi

:use_locking: false
:lock_location: ''

:canoe_url: https://canoe.pardot.com
:canoe_target: production
:custom_hooks: /opt/pardot/server_hooks.sh

:repos:
  :pardot:
    :repo_path: <%= pardot_dir %>
    :current_link: <%= pardot_dir %>/current
    :path_choices:
      - <%= pardot_dir %>/releases/A
      - <%= pardot_dir %>/releases/B
    :artifact_prefix: pi-
  :pithumbs:
    :repo_path: <%= pithumbs_dir %>
    :current_link: <%= pithumbs_dir %>/current
    :path_choices:
      - <%= pithumbs_dir %>/releases/A
      - <%= pithumbs_dir %>/releases/B
  :realtime-frontend:
    :repo_path: <%= realtime_dir %>
    :current_link: <%= realtime_dir %>/realtime-frontend
    :artifact_prefix: realtime-

:autojob_hosts:
  - redis-rules-s1:1234..1237
  - redis-cache-d1
  - redis-cache-d2
  - redis-cache-d3
  - redis-cache-d4
