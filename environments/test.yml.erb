# This is using the :key: yml syntax to get symbol keys instead of string keys
---
<% sync_dir = File.expand_path(File.dirname(File.dirname(__FILE__))) %>

:sudo: ""
:rsync_user: ""

:use_locking: true
:lock_location: <%= sync_dir %>/dev_lock

:canoe_url: http://canoe.dev
:canoe_target: staging
:canoe_api_token: "secret"

<% sources_path = "#{sync_dir}/test_sources" %>
<% destinations_path = "#{sync_dir}/test_destinations" %>

:repos:
  :pardot:
    :repo_path: <%= destinations_path %>/test-pi/
    :current_link: <%= destinations_path %>/current-pi
    :path_choices: 
      - <%= destinations_path %>/test-piA/
      - <%= destinations_path %>/test-piB/
  :node_modules:
    :repo_path: <%= destinations_path %>/test-node_modules
  :pithumbs:
    :repo_path: <%= destinations_path %>/test-thumbs
  :workflow-stats:
    :repo_path: <%= destinations_path %>/workflow_stats
    :current_link: <%= destinations_path %>/workflow_stats/current
    :artifact_prefix: workflowstats-1.0SNAPSHOT

:servers:
  :pardot: 
    - localhost
  :pithumbs: 
    - localhost
