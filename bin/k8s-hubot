#!/bin/sh
set -eu
cd $(dirname "$0")/..
HUBOT_ADAPTER="slack"
HUBOT_HTTPD="0"
: "${HUBOT_NAME:="batman"}"
: "${HUBOT_SLACK_TEAM:="lstoll"}"
: "${HUBOT_SLACK_TOKEN:="$(cat /secrets/hubot.slack.token)"}"
export \
    HUBOT_ADAPTER \
    HUBOT_HTTPD \
    HUBOT_NAME \
    HUBOT_SLACK_TEAM \
    HUBOT_SLACK_TOKEN

OPERATORD_ADDRESS="$OPERATORD_SERVICE_HOST:$OPERATORD_SERVICE_PORT"
export OPERATORD_ADDRESS

exec bin/hubot
